groups:
- name: HighDisk
  rules:
  - alert: HighDiskUsage
    expr: (node_filesystem_avail_bytes{fstype=~"ext4|xfs"} / node_filesystem_size_bytes{fstype=~"ext4|xfs"}) * 100 < 20
    for: 2m
    labels:
      severity: critical
    annotations:
      summary: "High Disk usage detected"
      description: "Disk usage is above 80% on server"