server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://pk5.edsonmanners.com:3100/loki/api/v1/push

scrape_configs:
- job_name: local
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      __path__: /var/log/*log

{% if {{ ansible_facts['os_family'] }} == "Debian" %}
- job_name: journald
  journal:
    json: false
    max_age: 12h
    path: /var/log/journal
    #matches: _TRANSPORT=kernel
    labels:
      job: systemd-journal
{% endif %}